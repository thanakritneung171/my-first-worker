{
  "info": {
    "_postman_id": "cf-devtools-001",
    "name": "User CRUD API",
    "description": "User Management API with CRUD operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Operations",
      "item": [
        {
          "name": "1. Create User (JSON)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('user_id', jsonData.id);",
                  "    pm.test('User created successfully', function() {",
                  "        pm.expect(pm.response.code).to.equal(201);",
                  "        pm.expect(jsonData).to.have.property('id');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password_hash\": \"$2b$10$abcdefghijklmnopqrst\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"phone\": \"0812345678\",\n  \"address\": \"123 Main St, Bangkok, Thailand\",\n  \"date_of_birth\": \"1990-01-15\",\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "1a. Create User with Avatar",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('user_id', jsonData.id);",
                  "    pm.test('User created with avatar', function() {",
                  "        pm.expect(pm.response.code).to.equal(201);",
                  "        pm.expect(jsonData).to.have.property('avatar_url');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "email",
                  "value": "jane.doe@example.com",
                  "type": "text"
                },
                {
                  "key": "password_hash",
                  "value": "$2b$10$abcdefghijklmnopqrst",
                  "type": "text"
                },
                {
                  "key": "first_name",
                  "value": "Jane",
                  "type": "text"
                },
                {
                  "key": "last_name",
                  "value": "Doe",
                  "type": "text"
                },
                {
                  "key": "phone",
                  "value": "0887654321",
                  "type": "text"
                },
                {
                  "key": "address",
                  "value": "456 Side St, Bangkok, Thailand",
                  "type": "text"
                },
                {
                  "key": "date_of_birth",
                  "value": "1992-05-20",
                  "type": "text"
                },
                {
                  "key": "status",
                  "value": "active",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "2. Get All Users",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.test('Response has pagination', function() {",
                  "    pm.expect(jsonData).to.have.property('pagination');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "disabled": false
                },
                {
                  "key": "limit",
                  "value": "10",
                  "disabled": false
                },
                {
                  "key": "status",
                  "value": "active",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "john",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "2a. Get All Users - With Filter",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users?page=1&limit=10&status=active&search=john",
              "host": ["{{base_url}}"],
              "path": ["api", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "active"
                },
                {
                  "key": "search",
                  "value": "john"
                }
              ]
            }
          }
        },
        {
          "name": "3. Get User by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.test('User object is valid', function() {",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('email');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            }
          }
        },
        {
          "name": "4. Update User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.test('User updated', function() {",
                  "    pm.expect(jsonData.first_name).to.equal('Jonathan');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Jonathan\",\n  \"last_name\": \"Doe\",\n  \"phone\": \"0887654321\",\n  \"status\": \"inactive\",\n  \"last_login_at\": \"2026-02-19T14:30:00Z\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            }
          }
        },
        {
          "name": "5. Delete User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.test('User deleted', function() {",
                  "    pm.expect(jsonData.message).to.equal('ลบผู้ใช้สำเร็จ');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            }
          }
        },
        {
          "name": "6. Upload User Avatar",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.test('Avatar uploaded and avatar_url updated', function() {",
                  "    pm.expect(jsonData).to.have.property('avatar_url');",
                  "    pm.expect(jsonData.avatar_url).to.include('users');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}/avatar",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}", "avatar"]
            }
          }
        }
      ]
    }
  ],
